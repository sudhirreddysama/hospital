<tr class="adv-field">
	<td style="padding-left: <%= a.indent.to_i * 20 %>px;">
		<div><div class="inp-row">
			<%= hidden_field_tag "filter[adv][#{i}][indent]", a.indent.to_i %>
			<a href="#" class="adv-indent" title="Indent"><i class="fa fa-chevron-circle-right"></i></a>
			<a href="#" class="adv-outdent" title="Outdent"><i class="fa fa-chevron-circle-left"></i></a>
			<a href="#" class="move" onclick="return false;"><i class="fa fa-arrows"></i></a>
			<span class="lbl-chk-grp adv-bool">
				<label class="lbl-chk"><%= radio_button_tag "filter[adv][#{i}][bool]", 'and', a.bool != 'or' %><span class="lbl lbl-blk">and</span></label>
				<label class="lbl-chk"><%= radio_button_tag "filter[adv][#{i}][bool]", 'or', a.bool == 'or' %><span class="lbl lbl-blk">or</span></label>
			</span>		
			<%= select_tag "filter[adv][#{i}][name]", options_for_select(@model.columns.map { |c| [c.name, {data: {type: c.type}}] }, a.name), class: 'adv-field' %>
			<span class="lbl-chk-grp">
				<label class="lbl-chk"><%= check_box_tag "filter[adv][#{i}][not]", '1', a.not %><span class="lbl lbl-yn-n">not</span></label>
			</span>		
			<%= select_tag "filter[adv][#{i}][op]", options_for_select([
				['=', '='],
				['contains', 'like', {data: {type: 'string'}}],
				['starts with', 'left', {data: {type: 'string'}}],
				['ends with', 'right', {data: {type: 'string'}}],
				['<', '<'],
				['>', '>'],
				['<=', '<='],
				['>=', '>='],
				['is null', 'null'],
			], a.op) %>
			<%= text_field_tag "filter[adv][#{i}][search]", a.search, style: 'width: 300px;' %>
			<a href="#" class="adv-del red" title="Remove"><i class="fa fa-minus-circle"></i></a>
		</div></div>
	</td>
</tr>