<% if params.action == 'copy' %>
	<tr>
		<th><i class="fa fa-warning"></i></th>
		<td>
			This Copied vehicle/day will be created within the same reservation if the description, users, and type are unchanged. Otherwise a new reservation will be created.
			<%= f.hidden_field :ve_reservation_id %>
		</td>
	</tr>
<% elsif o.ve_reservation && o.ve_reservation.ve_events.count > 1 %>
	<tr>
		<th><i class="fa fa-warning"></i></th>
		<td>You are editing a single day/vehicle for a multiple-day reservation. Changing the description, users, or type will split this day/vehicle off into its own reservation. 
		<%= link_to 'Click here to view/edit the full reservation.', {popup: nil, context: nil, context_id: nil, controller: :ve_reservations, action: :view, id: o.ve_reservation_id}, target: '_top' %></td>
	</tr>
<% end %>
<%= partial 've_reservations/fields_shared', f: f, o: o %>
<%= f.tr_select :ve_vehicle_id, VeVehicle.reservable(@current_user, o.ve_vehicle_id).order('ve_vehicles.vehicle_no').map { |v| 
		[v.no_ymm_name, v.id] 
	}, label: 'Vehicle', include_blank: true, req: true %>
<%= f.tr_text_field :date, class: 'date', value: o.date.d, label: 'Date', req: true %>
<%= f.tr_text_field :begin_time, class: 'time', value: o.begin_time.t, label: 'Begin Time', style: 'width: 100px;' %>
<%= f.tr_text_field :end_time, class: 'time', value: o.end_time.t, label: 'End Time', style: 'width: 100px;' %>
<%= f.tr_text_area :notes, label: 'Notes', class: 'r3' %>
<script>
	$('#obj_begin_time, #obj_end_time').inputmask('hh:mm t', {showMaskOnHover: true});
</script>