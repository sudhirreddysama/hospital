<div class="btns">
	<%= link_to fa('download', 'Preview'), {action: :download, id: o.id}, target: '_blank' %>
	<%= link_to fa('download', 'Preview to Word'), {action: :word, id: o.id}, target: '_blank' %>
	<%= link_to fa('download', 'Download Merged'), {context: :doc_bulk, context_id: o.id, controller: :documents, action: :all}, target: '_blank' %>
</div>
<div class="view">
	<%= dl 'ID', o.id %>
	<%= dl 'Name', o.name %>
	<%= dl 'Created By', o.user.try(:username) %>
	<%= dl 'Created At', o.created_at.dt %>
</div>
<div class="view">
	<%= dl 'Type', o.obj_type %>
	<%= dl 'Count', o.documents.count %>
	<%= dl 'Doc Template', o.doc_template ? link_to(o.doc_template.label, context: nil, controller: :doc_templates, action: :view, id: o.doc_template_id) : '' %>
</div>
<% if !@obj.action %>
	<%= partial 'documents/view_common', o: o %>
<% end %>
<% @documents_once = false %>
<%= partial 'application/documents', o: o %>